set nocompatible
filetype indent plugin on
syntax on
set hidden
set wildmenu
set showcmd
set hlsearch
set ignorecase
set smartcase
set backspace=indent,eol,start
set autoindent
set nostartofline
set ruler
set mouse=a
set nowrap
set ruler
set co=85
set lines=62
set number

"Highlights the line and column of the cursor
set cul
"set cuc

"creates a colored column at position 80
set cc=80

"Line length above where to break a line
set tw=80

"Number of spaces a <tab> character inserts
set ts=4

"insert space characters instead of tab
set expandtab

"number of spaces to use for each level of (auto)indent
set sw=4

"A <Tab> in an indent inserts 'shiftwidth' spaces
set smarttab

"If non-zero, number of spaces to insert for a <tab>
set sts=4

"Sets the default syntax highlighting
colorscheme desertEx

"Sets the default font to Inconsolata
set gfn=Inconsolata\ Medium\ 9 

